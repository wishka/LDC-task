<form>
  <div class="col-md-4 about-left">
    <div class="tfood">
      <p><b>Main</b></p>
    <table><% @products.each do |i| %>
      <tr>
    <td><b><%= i.title %></b>
    <%= image_tag i.path_to_image %></td>
    <td><i><%= i.discribe %></i></td>
    <td><b>Price: <%= i.price %></b>
    <input type="radio" name="main" value="main"></td>
    <% end %>
    </tr>
    </table>
  </div>
  </div>

  <div class="col-md-4 about-left">
    <div class="tfood">
      <p><b>Topping</b></p>
    <table><% @products2.each do |i| %>
      <tr>
    <td><b><%= i.title %></b>
    <%= image_tag i.path_to_image %></td>
    <td><i><%= i.discribe %></i></td>
    <td><b>Price: <%= i.price %></b>
    <input type="radio" name="topping" value="topping"></td>
    <% end %>
    </tr>
    </table>
  </div>
  </div>

    <div class="col-md-4 about-left">
      <div class="tfood">
        <p><b>Drink</b></p>
      <table><% @products3.each do |i| %>
        <tr>
      <td><b><%= i.title %></b>
      <%= image_tag i.path_to_image %></td>
      <td><i><%= i.discribe %></i></td>
      <td><b>Price: <%= i.price %></b>
      <input type="radio" name="drink" value="drink"></td>
      <% end %>
      </tr>
      </table>
    </div>
    </div>
  <div>
    <button class="btn btn-md btn-success" type="submit" onclick="add_to_cart()">Add to Cart</button>
  </div>
</form>

<script>
  function add_to_cart(id){
    var x = window.localStorage.getItem(id);
    x = x * 1 + 1;
    window.localStorage.setItem(id, x);}
</script>
